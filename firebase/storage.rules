rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;

service firebase.storage {
  match /b/{bucket}/o {
    
    // Production rules
    match /storg_ProfilePhotos/{uid} {
      allow read: if request.auth != null;                                // Anyone logged in can read
      allow write: if request.auth != null && request.auth.uid == uid;    // User can write their own profile photo
    }

    match /storg_MessPhotos/{uid} {
      allow read: if request.auth != null;                                // Anyone logged in can read
      allow write: if request.auth != null && request.auth.uid == uid;    // User can write their own mess photos
    }

    match /storg_IdentityDocuments/{uid} {
      // Only the user themselves can read/write their documents
      allow read, write: if request.auth != null && request.auth.uid == uid;

      // Validate specific fields if needed (add custom validation here if applicable)
    }

    match /storg_FeedbackPhotos/{uid} {
      allow read: if false;                                               // No one can read feedback photos
      allow write: if request.auth != null;                               // Anyone logged in can write feedback photos
    }

    // Preview rules
    match /preview_storg_ProfilePhotos/{uid} {
      allow read: if request.auth != null;                                // Anyone logged in can read
      allow write: if request.auth != null && request.auth.uid == uid;    // User can write their own profile photo
    }

    match /preview_storg_MessPhotos/{uid} {
      allow read: if request.auth != null;                                // Anyone logged in can read
      allow write: if request.auth != null && request.auth.uid == uid;    // User can write their own mess photos
    }

    match /preview_storg_IdentityDocuments/{uid} {
      // Only the user themselves can read/write their documents
      allow read, write: if request.auth != null && request.auth.uid == uid;

      // Validate specific fields if needed (add custom validation here if applicable)
    }

    match /preview_storg_FeedbackPhotos/{uid} {
      allow read: if false;                                               // No one can read feedback photos
      allow write: if request.auth != null;                               // Anyone logged in can write feedback photos
    }
  }
}
