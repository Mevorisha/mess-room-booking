{
  "hosting": {
    "public": "../app/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "emulators": {
    "database": {
      "port": 9002
    },
    "storage": {
      "port": 9003
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 9004
    },
    "ui": {
      "enabled": true,
      "port": 9000
    }
  },
  "database": {
    "rules": "firebase/database.rules.json"
  },
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  }
}
